{
    "manifest_version": 3,
    "name": "Udemy Auto-Skip",
    "version": "1.1",
    "description": "Automatically skip quizzes and articles on Udemy.",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "*://www.udemy.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}